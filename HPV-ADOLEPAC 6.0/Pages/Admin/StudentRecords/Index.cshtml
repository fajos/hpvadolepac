@page
@model HPV_ADOLEPAC_6._0.Pages.Admin.StudentRecords.IndexModel

@{
    ViewData["Title"] = "Registered Students";

    var studentCount = Model.student.Count();
}

<h1>Registered Students: @studentCount</h1>

<!-- Button to create a new user -->
<p>
    <a asp-page="Create" class="btn btn-primary">Create New User</a>
</p>

<!-- Search and Filter Form -->
<form method="get" class="mb-4">
    <div class="row align-items-center">
        <div class="col-auto fw-bold">
            <label for="box">Search:</label>
        </div>
        <div class="col-sm-3">
            <input type="text" class="form-control" name="SearchString" id="box" value="@Model.SearchString" placeholder="Enter search term">
        </div>
        <div class="col-auto">
            <input type="submit" value="Search" class="btn btn-primary">
        </div>
        <div class="col-auto">
            <input type="submit" value="Show All Records" name="ShowAll" class="btn btn-secondary">
        </div>
    </div>
</form>

<form method="post" asp-page-handler="Export" class="mt-4">
    <div class="row">
        <div class="col-sm-auto">
            <button type="submit" class="btn btn-success">Export to Excel</button>
        </div>
    </div>
</form>

<!-- Table for Displaying Student Records -->
<div class="table-responsive">
    <table class="table table-striped table-bordered mt-4">
        <thead class="thead-dark">
            <tr>
                <th>Username</th>
                <th>Parent's Name</th>
                <th>Parent's Email</th>
                <th>Parent's Phone Number</th>
                <th>Gender</th>
                <th>Age</th>
                <th>School</th>
                <th>Grade</th>
                <th>Religion</th>
                <th>Ethnic Group</th>
                <th>Parental Marital Status</th>
                <th>Father's Education Level</th>
                <th>Mother's Education Level</th>
                <th>Father's Occupation</th>
                <th>Mother's Occupation</th>
                <th>Monthly Income</th>
                <th>Annual Income</th>
                <th>Device Ownership</th>
                <th>Wifi Payment Frequency</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.student)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.StudentUserName)</td>
                    <td>@Html.DisplayFor(modelItem => item.StudentParentName)</td>
                    <td>@Html.DisplayFor(modelItem => item.StudentEmail)</td>
                    <td>@Html.DisplayFor(modelItem => item.StudentParentPhone)</td>
                    <td>@Html.DisplayFor(modelItem => item.StudentGender)</td>
                    <td>@Html.DisplayFor(modelItem => item.StudentAge)</td>
                    <td>@Html.DisplayFor(modelItem => item.School)</td>
                    <td>@Html.DisplayFor(modelItem => item.Grade)</td>
                    <td>@Html.DisplayFor(modelItem => item.Religion)</td>
                    <td>@Html.DisplayFor(modelItem => item.EthinicGroup)</td>
                    <td>@Html.DisplayFor(modelItem => item.ParentalMaritalStatus)</td>
                    <td>@Html.DisplayFor(modelItem => item.FatherEdulevel)</td>
                    <td>@Html.DisplayFor(modelItem => item.MotherEdulevel)</td>
                    <td>@Html.DisplayFor(modelItem => item.FatherOccupation)</td>
                    <td>@Html.DisplayFor(modelItem => item.MotherOccupation)</td>
                    <td>@Html.DisplayFor(modelItem => item.MonthlyIncome)</td>
                    <td>@Html.DisplayFor(modelItem => item.AnnualIncome)</td>
                    <td>@Html.DisplayFor(modelItem => item.DeviceOwnership)</td>
                    <td>@Html.DisplayFor(modelItem => item.FrequencySub)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.StudentID" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-page="./Details" asp-route-id="@item.StudentID" class="btn btn-sm btn-info">Details</a>
                        <a asp-page="./Delete" asp-route-id="@item.StudentID" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>