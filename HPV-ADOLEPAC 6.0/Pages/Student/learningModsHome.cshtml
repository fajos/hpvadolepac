            <a href="/Student/mod4"><img src="/images/mod4_icon.PNG" alt="Module 4 Icon"></a>
            <a href="/Student/mod4" class="btn">Module 4</a>
        </div>

        <div class="image-wrapper">
            <a href="/Student/mod5"><img src="/images/mod5_icon.PNG" alt="Module 5 Icon"></a>
            <a href="/Student/mod5" class="btn">Module 5</a>
        </div>


    </div>
</body>
</html>
