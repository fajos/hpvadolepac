@page
@model HPV_ADOLEPAC_6._0.Pages.Student.learningModsHomeModel
@{
    ViewData["Title"] = "Learning Modules";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style media="screen and (min-width:1200px)">
        .modPages {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 55vw;
            padding-top: 30px;
        }

        .image-wrapper {
            position: relative;
            margin-bottom: 150px;
        }

            .image-wrapper img {
                position: absolute;
                top: -40px;
                left: 115px;
                width: 80px;
                height: 80px;
                z-index: 10;
            }

        .modPages .btn {
            position: absolute;
            z-index: 0; /* make buttons behind images */
            width: 150px;
            transition: background-color 0.3s, color 0.3s;
        }

    </style>

    <style media="screen and (max-width:1099px) and (min-width:800px)">
        .modPages {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 60vw;
            padding-top: 30px;
        }

        .image-wrapper {
            position: relative;
            margin-bottom: 150px;
        }


            .image-wrapper img {
                position: absolute;
                top: -40px;
                left: 115px;
                width: 80px;
                height: 80px;
                z-index: 10;
            }

        .modPages .btn {
            position: absolute;
            z-index: 0; /* make buttons behind images */
            width: 150px;
            transition: background-color 0.3s, color 0.3s;
        }

    </style>

    <style media="screen and (max-width:799px)">
        .modPages {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 50vw;
            padding-top: 30px;
        }

        .image-wrapper {
            position: relative;
            margin-bottom: 150px;
        }

            .image-wrapper img {
                position: absolute;
                top: -40px;
                left: 115px;
                width: 80px;
                height: 80px;
                z-index: 10;
            }

        .modPages .btn {
            position: absolute;
            z-index: 0; /* make buttons behind images */
            width: 150px;
            transition: background-color 0.3s, color 0.3s;
            font-size: large;
        }

    </style>





</head>

<body>
    <header>
